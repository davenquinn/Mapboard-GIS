$secondary=#304e68
$bkg=#261e2d

//$accent=#400C4A
$accent=darken(#a328b4,40%)

:root
  --header-font: "Montserrat", Helvetica, sans-serif
  --background-color: lighten(#161517, 2%)
  --text-color: darken(#354a61, 20%)
  --accent-color: $accent
  --accent-background: alpha($accent, 20%)
  --accent-active: alpha($accent, 30%)
  --secondary-color: $secondary
  --card-background: linear-gradient(95deg, lighten(#37445a, 60%) 0%, lighten(#2c556b,60%) 100%)

$accent-light=#a328b4
$purple-color=lighten(#5A13CA,40%)

body.bp3-dark
  --text-color: lighten(#354a61, 70%)
  --accent-color: $accent-light 
  --accent-background: alpha($accent-light, 20%)
  --accent-active: alpha($accent-light, 30%)
  --secondary-color: lighten($secondary,40%)
  --background-color: lighten(#161517, 2%)
  --card-background: linear-gradient(95deg, #37445a 0%, #2c556b 100%);

*
  box-sizing: border-box


body
  background: linear-gradient(120deg, lighten(rgba(34,29,38,1),70%) 0%, lighten(rgba(52,45,79,1),80%) 100%);
  &.bp3-dark
    background: linear-gradient(120deg, darken(rgba(34,29,38,1),30%) 0%, darken(rgba(52,45,79,1),20%) 100%);
  transition: background 1s;
  font-family "Merriweather", 'Times New Roman', Times, serif
  line-height 2
  //background-color: var(--background-color)
  position relative
  margin 0
  padding 0
  color var(--text-color)

.wrap
  padding 2em
  max-width 52em
  margin 0 auto

h1,h2,h3,h4,h5,h6
  font-family: var(--header-font)
  color var(--secondary-color)
header
  display flex
  flex-direction row
  align-items center
  .header-image
    cursor pointer
    img.mapboard-logo
      width 150px
    margin-right 2em
    flex-grow 0
  .header-main
    flex-grow 1
  h1.page-title
    //font-family: "Helvetica Neue", Helvetica, sans-serif
    color #544679
    margin 0em 0 0.2em
    font-weight 400
    font-size 3.5em
    line-height 1
    span.dimmer
      opacity 0.5
  nav ul
    display flex
    flex-flow: row wrap
    justify-content: left
    padding-left 0
    margin-bottom -1em
    li
      margin-right 1em
      margin-bottom 1em
      list-style: none
  .header-main a.page-title-link
    text-decoration: none
    color: var(--text-color)

$grid_margin=1em

card()
  padding:0.35em 1.2em;
  border:0.1em solid #000000;
  margin:0 $grid_margin $grid_margin 0;
  border-radius:5px;
  box-sizing: border-box;
  background: var(--card-background)
  //background: linear-gradient(95deg, lighten(#37445a, 60%) 0%, lighten(#2c556b,60%) 100%);

  h1,h2,h3,h4,h5,h6
    margin 0.5em 0 0.7em
    font-family: var(--header-font)
    color var(--text-color)
    font-weight 400
    font-size 1.5em
    line-height 1em

button.bp3-button
  background-color transparent
  line-height 2
  span.bp3-icon
    transform translateY(2)
    svg
      transform scale(1.3) translateY(1px)
      path
        fill var(--accent-color)
    

a.link-button, button.bp3-button
  font-size 17px
  text-align: center
  display:inline-block;
  padding:0.35em 1.2em;
  border:2px solid var(--accent-color);
  color var(--accent-color);
  border-radius:0.3em;
  box-sizing: border-box;
  text-decoration:none;
  font-weight:300;
  text-align:center;
  transition: all 0.2s;
  &.active
    background-color: var(--accent-active) !important
  &:hover
    background-color:var(--accent-background);

.callout-panel
  display grid
  grid-template-columns 50fr 50fr;
  margin-right -1*$grid_margin

  video
    width 380px

.callout
  card()
  flex-grow 1
  font-size 0.9em
  line-height 1.5em
  p
    text-align left


// Typography
p
  text-align: justify

.manifesto
  margin 1em 2em
  font-size 1.5em
  p
    text-align left
    font-weight 300
    font-style italic
  &>*
    margin-right 1em
  margin-right -1em
  p, em, b, strong
  .buttons
    min-width 18em
  