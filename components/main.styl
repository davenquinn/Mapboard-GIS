.wrap
  max-width 50em
  margin 0 auto

:root
  --background-color: white
  --text-color: black
  --header-font: "Montserrat", Helvetica, sans-serif

@media (prefers-color-scheme: dark)
  :root
    --background-color: lighten(#161517, 2%)
    --text-color: lighten(#354a61, 70%)

*
  font-family "Merriweather", 'Times New Roman', Times, serif
  line-height 2
  color var(--text-color)

body
  background-color: var(--background-color)

h1,h2,h3,h4,h5,h6
  font-family: var(--header-font)

header
  display flex
  flex-direction row
  &>*
    margin-right 2em
  margin-right -2em
  nav ul
    display flex
    flex-flow: row wrap
    padding-left 0
    li
      margin-right 1em
      list-style: none
  .header-main a.page-title-link
    text-decoration: none
    color: var(--text-color)
  .header-image
    margin-left -10px

$grid_margin=1em

card()
  padding:0.35em 1.2em;
  border:0.1em solid #000000;
  margin:0 $grid_margin $grid_margin 0;
  border-radius:0.12em;
  box-sizing: border-box;

a.link-button
  text-align: center
  display:inline-block;
  padding:0.35em 1.2em;
  border:0.1em solid #000000;
  margin:0 0.3em 0.3em 0;
  border-radius:0.12em;
  box-sizing: border-box;
  text-decoration:none;
  font-weight:300;
  color:#000000;
  text-align:center;
  transition: all 0.2s;
  &:hover
    color:#000000;
    background-color:#eeeeee;

.callout-panel
  display grid
  grid-template-columns 50fr 50fr;
  margin-right -1*$grid_margin

  video
    width 380px

.callout
  card()
  flex-grow 1
  font-size 0.9em
  line-height 1.5em
  p
    text-align left


// Typography
p
  text-align: justify

.manifesto
  card()
  display flex
  flex-direction row
  &>*
    margin-right 1em
  margin-right -1em
  p, em
    font-family var(--header-font)
  .buttons
    min-width 18em
  